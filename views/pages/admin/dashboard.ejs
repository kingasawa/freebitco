<body onload="getDashboard()">
<div id="mainAdmin" class="ui grid">
    <%- partial ('menu.ejs') %>

    <div class="thirteen wide column">
        <div id="admin-container">
            <div class="page-statistics">
                <div class="ui grid">
                    <div class="doubling four column row">
                        <div class="column">
                            <div class="ui orange statistic item-statistics user-statistics">
                                <div class="value">
                                    <%= data.userCount %>
                                </div>
                                <div class="label">
                                    Users
                                </div>
                            </div>
                        </div>

                        <div class="column">
                            <div class="ui olive statistic item-statistics">
                                <div class="value">
                                    <%= data.goldenTicketCount %>
                                </div>
                                <div class="label">
                                    Golden Tickets
                                </div>
                            </div>
                        </div>

                        <div class="column">
                            <div class="ui yellow statistic item-statistics">
                                <div class="value">
                                    <%= data.lotteryTicketCount %>
                                </div>
                                <div class="label">
                                    Lotteries Tickets
                                </div>
                            </div>
                        </div>

                        <div class="column">
                            <div class="ui violet statistic item-statistics">
                                <div class="value">
                                    2,059
                                </div>
                                <div class="label">
                                    Orders
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="ui grid" style="padding-right: 10px">
                    <div class="ten wide column">
                        <canvas id="lotteryTicketChart"></canvas>
                    </div>
                    <div class="six wide column">
                        <table id="dashboardUserList" class="ui selectable inverted table">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>EMAIL</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% data.users.forEach(function(user){ %>
                                <tr>
                                    <td><%- user.id %></td>
                                    <td><%- user.email %></td>
                                </tr>
                            <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
</body>
