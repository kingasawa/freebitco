<body id="home-body">
<%- partial ('../pages/partials/menu_no_login.ejs') %>
<div class="container" style="padding:0 30px; background: none">
  <div class="ui stackable two column grid">
    <div class="column">
      <%- partial ('../pages/partials/home.ejs') %>
    </div>
    <div class="column">
      <form class="ui form" method="POST" action="/auth/login">
        <div class="field">
          <label>Email</label>
          <input type="text" value="<%= email %>" name="email" placeholder="Enter email">
        </div>
        <div class="field">
          <label>Password</label>
          <input type="password" name="password" placeholder="Enter password">
        </div>
        <div class="field">
          <label>2FA Code</label>
          <input type="text" name="2fa" placeholder="Enter 2FA Code">
        </div>
        <button class="fluid ui primary button" type="submit">LOGIN</button>
<!--        <div class="fluid ui submit inverted green button">LOGIN</div>-->
        <div style="margin-top: 30px">
          <a href="#">FORGOT PASSWORD</a>  <span style="color:#CCC"> - </span>  <a href="#">RESET 2FA CODE</a>
        </div>
      </form>
    </div>
  </div>
</div>
</body>
