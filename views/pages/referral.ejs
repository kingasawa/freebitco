    <div class="personal_stats" style="max-width:600px; margin:15px auto">
      <div class="referral-url ui top attached message">
        YOUR REFERRAL URL
      </div>
      <div class="ui bottom attached table center aligned" style="padding:20px">
        <div class="ui form">
          <div class="field">
            <input type="text" value="https://freeilu.com/?r=380588" disabled>
          </div>
        </div>
      </div>

    </div>
  </div>

  <div class="section">
    <div style="max-width:600px;margin:20px auto">
      <div class="referral-banner ui top attached message">
        BANNERS
      </div>
      <table class="ui bottom attached table center aligned">
        <tbody>
        <tr>
          <td style="width:20%;min-width:100px">
            720x168
          </td>
          <td>
            <div class="ui fluid input">
              <input type="text" value="https://static1.freeilu.com/banners/contest_728_90.gif">
            </div>
          </td>
        </tr>
        <tr>
          <td style="width:20%;min-width:100px">
            468 X 60
          </td>
          <td>
